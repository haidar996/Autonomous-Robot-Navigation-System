<?xml version="1.0" ?>
<robot name="my_robot1" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="link_chassis">
    <!-- Origin of the link -->
    <pose>2 2 1 2 2 1</pose>
    
    <!-- Inertial properties -->
    <inertial>
      <mass value="5"/>
      <!-- Center of mass aligned with geometry center -->
      <origin rpy="0 0 0" xyz="2 2 1"/>
      <inertia ixx="0.0833" ixy="0" ixz="0" iyy="0.0833" iyz="0" izz="0.0833"/>
    </inertial>
    
    <!-- Collision properties -->
    <collision name="collision_chassis">
      <origin xyz="2 2 1" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.75 0.5"/>
      </geometry>
    </collision>
    
    <!-- Visual properties -->
    <visual>
      <origin xyz="2 2 1" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.75 0.5"/>
      </geometry>
    </visual>
  </link>
  
  <!-- Optionally make the object static in the simulation -->
  <gazebo reference="link_chassis">
    <static>true</static>
  </gazebo>
</robot>

